<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ClientActivity">

    <GridView
        android:id="@+id/gridView"
        android:layout_width="wrap_content"
        android:layout_height="730dp"
        android:layout_weight="1"
        android:background="#FFFFFF"
        android:numColumns="16"
        tools:listitem="@layout/field_item"></GridView>

    <RelativeLayout
        android:id="@+id/LinearLayoutControl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <ImageButton
            android:id="@+id/buttonDown"
            android:layout_width="71dp"
            android:layout_height="66dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:contentDescription="Button for Down"
            android:src="@drawable/downarrow" />

        <ImageButton
            android:id="@+id/buttonUp"
            android:layout_width="67dp"
            android:layout_height="68dp"
            android:layout_above="@+id/buttonDown"
            android:layout_alignLeft="@+id/buttonDown"
            android:layout_alignRight="@+id/buttonDown"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:contentDescription="Button for Up"
            android:src="@drawable/uparrow" />

        <ImageButton
            android:id="@+id/buttonLeft"
            android:layout_width="66dp"
            android:layout_height="66dp"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@+id/buttonDown"
            android:contentDescription="Button for Down"
            android:src="@drawable/leftarrow" />

        <ImageButton
            android:id="@+id/buttonRight"
            android:layout_width="68dp"
            android:layout_height="67dp"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/buttonDown"
            android:contentDescription="Button for Right"
            android:src="@drawable/rightarrow" />

        <ImageButton
            android:id="@+id/buttonFire"
            android:layout_width="199dp"
            android:layout_height="59dp"
            android:layout_alignLeft="@+id/buttonUp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="-65dp"
            android:layout_marginRight="-65dp"
            android:layout_toLeftOf="@+id/buttonRight"
            android:src="@drawable/fire" />

        <TextView
            android:id="@+id/bank_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/balanceImage"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="-32dp"
            android:text="1000"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/balanceImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/buttonFire"
            android:layout_marginBottom="-80dp"
            android:contentDescription="@string/balanceimage"
            android:src="@drawable/balance" />

        <ImageButton
            android:id="@+id/buttonLeave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/close" />

        <ImageButton
            android:id="@+id/buttonLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/login" />

        <ImageView
            android:id="@+id/bulletZoneLarge"
            android:layout_width="282dp"
            android:layout_height="252dp"
            android:layout_above="@+id/buttonFire"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="3dp"
            android:layout_marginTop="88dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="100dp"
            android:contentDescription="BulletZone Logo"
            android:src="@drawable/bulletzonelarge" />


    </RelativeLayout>



</LinearLayout>
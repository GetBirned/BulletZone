<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/RelativeLayoutRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="800dp"
        android:layout_height="60dp">
        <ImageView
            android:id="@+id/bulletZoneLage"
            android:layout_width="302dp"
            android:layout_height="80dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="3dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="300dp"
            android:layout_marginRight="-6dp"
            android:contentDescription="BulletZone Logo"
            android:src="@drawable/bulletzonelarge" />

        <!-- Your views go here -->

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="380dp"
        android:layout_height="200dp"
        android:layout_marginTop="80dp">
        <TextView
            android:id="@+id/bank_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/balanceImage"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="-32dp"
            android:text=""
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/balanceImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="650dp"
            android:layout_marginTop="50dp"
            android:contentDescription="@string/balanceimage"
            android:src="@drawable/balance" />

        <TextView
            android:id="@+id/tankHealth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="130dp"
            android:layout_marginLeft="30dp"
            android:text=""
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/tankHealthDesc"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_marginBottom="650dp"
            android:layout_marginTop="100dp"
            android:src="@drawable/health" />

        <TextView
            android:id="@+id/soldierHealth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="130dp"
            android:layout_marginLeft="130dp"
            android:text=""
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/soldierHealthDesc"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginBottom="650dp"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="100dp"
            android:src="@drawable/soldierhealth" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/LinearLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context=".ClientActivity">


        <GridView
            android:id="@+id/gridView"

            android:layout_width="wrap_content"
            android:layout_height="430dp"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:numColumns="16"
            tools:listitem="@layout/field_item"
            android:layout_marginTop="280dp"
            android:layout_marginBottom="-32dp"></GridView>



        <RelativeLayout
            android:id="@+id/LinearLayoutControl"
            android:layout_width="match_parent"
            android:layout_height="850dp"
            android:layout_weight="1"
            android:layout_marginTop="68dp">


            <Button
                android:id="@+id/controlTank"
                android:layout_width="124dp"
                android:layout_height="58dp"
                android:layout_alignLeft="@+id/buttonUp"
                android:layout_alignTop="@+id/buttonFire"
                android:layout_alignBottom="@+id/buttonFire"
                android:layout_marginLeft="52dp"
                android:layout_marginTop="-233dp"
                android:layout_marginRight="-107dp"
                android:layout_marginBottom="234dp"
                android:layout_toLeftOf="@+id/buttonRight"
                android:text="Control Tank" />

            <Button
                android:id="@+id/controlBuilder"
                android:layout_width="124dp"
                android:layout_height="58dp"
                android:layout_alignLeft="@+id/buttonUp"
                android:layout_alignTop="@+id/buttonFire"
                android:layout_alignBottom="@+id/buttonFire"
                android:layout_marginLeft="-109dp"
                android:layout_marginTop="-230dp"
                android:layout_marginRight="55dp"
                android:layout_marginBottom="232dp"
                android:layout_toLeftOf="@+id/buttonRight"
                android:text="Control Builder" />

            <Button
                android:id="@+id/buildRoad"
                android:layout_width="101dp"
                android:layout_height="49dp"
                android:layout_alignLeft="@+id/buttonUp"
                android:layout_alignTop="@+id/buttonFire"
                android:layout_alignBottom="@+id/buttonFire"
                android:layout_marginLeft="-141dp"
                android:layout_marginTop="-87dp"
                android:layout_marginRight="109dp"
                android:layout_marginBottom="100dp"
                android:layout_toLeftOf="@+id/buttonRight"
                android:text="Road" />

            <Button
                android:id="@+id/buildBridge"
                android:layout_width="101dp"
                android:layout_height="49dp"
                android:layout_alignLeft="@+id/buttonUp"
                android:layout_alignTop="@+id/buttonFire"
                android:layout_alignBottom="@+id/buttonFire"
                android:layout_marginLeft="103dp"
                android:layout_marginTop="-85dp"
                android:layout_marginRight="-133dp"
                android:layout_marginBottom="98dp"
                android:layout_toLeftOf="@+id/buttonRight"
                android:text="Bridge" />

            <Button
                android:id="@+id/buildWall"
                android:layout_width="101dp"
                android:layout_height="49dp"
                android:layout_alignLeft="@+id/buttonUp"
                android:layout_alignTop="@+id/buttonFire"
                android:layout_alignBottom="@+id/buttonFire"
                android:layout_marginLeft="-14dp"
                android:layout_marginTop="-86dp"
                android:layout_marginRight="-16dp"
                android:layout_marginBottom="99dp"
                android:layout_toLeftOf="@+id/buttonRight"
                android:text="Wall" />

            <Button
                android:id="@+id/dismantleImprovement"
                android:layout_width="112dp"
                android:layout_height="42dp"
                android:layout_alignLeft="@+id/buttonUp"
                android:layout_alignTop="@+id/buttonFire"
                android:layout_alignBottom="@+id/buttonFire"
                android:layout_marginLeft="-20dp"
                android:layout_marginTop="-159dp"
                android:layout_marginRight="-22dp"
                android:layout_marginBottom="176dp"
                android:layout_toLeftOf="@+id/buttonRight"
                android:text="Dismantle" />

            <Button
                android:id="@+id/deploySoldier"
                android:layout_width="199dp"
                android:layout_height="59dp"
                android:layout_alignLeft="@+id/buttonUp"
                android:layout_alignTop="@+id/buttonFire"
                android:layout_alignBottom="@+id/buttonFire"
                android:layout_marginLeft="-56dp"
                android:layout_marginTop="-313dp"
                android:layout_marginRight="-64dp"
                android:layout_marginBottom="315dp"
                android:layout_toLeftOf="@+id/buttonRight"
                android:text="Deploy Soldier" />

            <ImageButton
                android:id="@+id/buttonDown"
                android:layout_width="71dp"
                android:layout_height="66dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:contentDescription="Button for Down"
                android:src="@drawable/downarrow" />

            <ImageButton
                android:id="@+id/buttonUp"
                android:layout_width="67dp"
                android:layout_height="68dp"
                android:layout_above="@+id/buttonDown"
                android:layout_marginTop="60dp"
                android:layout_alignLeft="@+id/buttonDown"
                android:layout_alignRight="@+id/buttonDown"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:contentDescription="Button for Up"
                android:src="@drawable/uparrow" />

            <ImageButton
                android:id="@+id/buttonLeft"
                android:layout_width="66dp"
                android:layout_height="66dp"
                android:layout_alignParentBottom="true"
                android:layout_toLeftOf="@+id/buttonDown"
                android:contentDescription="Button for Down"
                android:src="@drawable/leftarrow" />

            <ImageButton
                android:id="@+id/buttonRight"
                android:layout_width="68dp"
                android:layout_height="67dp"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@+id/buttonDown"
                android:contentDescription="Button for Right"
                android:src="@drawable/rightarrow" />

            <ImageButton
                android:id="@+id/buttonFire"
                android:layout_width="199dp"
                android:layout_height="59dp"
                android:layout_alignLeft="@+id/buttonUp"
                android:layout_marginLeft="-65dp"
                android:layout_marginRight="-65dp"
                android:layout_marginTop="680dp"
                android:layout_toLeftOf="@+id/buttonRight"
                android:src="@drawable/fire" />

            <ImageButton
                android:id="@+id/buttonLeave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="30dp"
                android:layout_marginRight="20dp"
                android:src="@drawable/close" />

            <ImageButton
                android:id="@+id/buttonReplay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="30dp"
                android:layout_marginRight="200dp"
                android:src="@drawable/replay" />





        </RelativeLayout>



    </LinearLayout>
</RelativeLayout>